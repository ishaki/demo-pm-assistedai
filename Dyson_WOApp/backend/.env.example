# Application Settings
APP_NAME=AI-Assisted Preventive Maintenance POC
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration (External MS SQL Server)
# IMPORTANT: Update this to point to your external SQL Server instance
# Format: mssql+pyodbc://username:password@host:port/database?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes
# Examples:
#   - Local network: mssql+pyodbc://sa:YourPassword@192.168.1.100:1433/dyson_pm?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes
#   - Azure SQL: mssql+pyodbc://username:password@yourserver.database.windows.net:1433/dyson_pm?driver=ODBC+Driver+18+for+SQL+Server&Encrypt=yes
#   - Hostname: mssql+pyodbc://sa:YourPassword@sqlserver.company.local:1433/dyson_pm?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes
DATABASE_URL=mssql+pyodbc://sa:YourStrong!Passw0rd@YOUR_SQL_SERVER_HOST:1433/dyson_pm?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# LLM Provider Configuration
# Options: openai, claude, gemini
LLM_PROVIDER=openai

# API Keys (fill in your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Override default model for the provider
# LLM_MODEL=gpt-4
# LLM_MODEL=claude-3-5-sonnet-20241022
# LLM_MODEL=gemini-1.5-pro

# AI Decision Confidence Threshold (0.0 to 1.0)
CONFIDENCE_THRESHOLD=0.7

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_USE_TLS=True

# PM Detection Window (days before PM due date)
PM_DUE_DAYS=30

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# API Version Prefix
API_V1_PREFIX=/api/v1
