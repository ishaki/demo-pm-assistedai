# ===========================
# DATABASE CONFIGURATION
# ===========================
DATABASE_URL=mssql+pyodbc://username:password@server:1433/database?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# ===========================
# LLM PROVIDER CONFIGURATION
# ===========================
# Options: openai, anthropic, or google
LLM_PROVIDER=openai

# API Keys (only the one matching LLM_PROVIDER is required)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here

# ===========================
# AI DECISION THRESHOLDS
# ===========================
CONFIDENCE_THRESHOLD=0.7
PM_DUE_DAYS=30

# ===========================
# EMAIL CONFIGURATION
# ===========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=True

# ===========================
# APPLICATION SETTINGS
# ===========================
DEBUG=True
# CORS Origins - comma-separated list of allowed origins
# For development: http://localhost:3000
# For production with domain: https://your-domain.com,http://your-domain.com
CORS_ORIGINS=http://localhost:3000

# ===========================
# FRONTEND CONFIGURATION
# ===========================
# IMPORTANT: This is the URL the browser uses to connect to the backend API
# For development: http://localhost:8000/api/v1
# For production with IP: http://192.168.1.100:8000/api/v1
# For production with domain: https://api.your-domain.com/api/v1 OR https://your-domain.com:8000/api/v1
REACT_APP_API_URL=http://localhost:8000/api/v1

# ===========================
# N8N CONFIGURATION
# ===========================
N8N_USER=admin
N8N_PASSWORD=change-this-secure-password
# Webhook URL for n8n
# For development: http://localhost:5678/
# For production with domain: https://n8n.your-domain.com/ OR https://your-domain.com:5678/
N8N_WEBHOOK_URL=http://localhost:5678/
TIMEZONE=UTC
