# ===========================
# DATABASE CONFIGURATION
# ===========================
DATABASE_URL=mssql+pyodbc://username:password@server:1433/database?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# ===========================
# LLM PROVIDER CONFIGURATION
# ===========================
# Choose: openai, anthropic, or google
LLM_PROVIDER=openai

# API Keys (only the one matching LLM_PROVIDER is required)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here

# ===========================
# AI DECISION THRESHOLDS
# ===========================
CONFIDENCE_THRESHOLD=0.7
PM_DUE_DAYS=30

# ===========================
# EMAIL CONFIGURATION
# ===========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=True

# ===========================
# APPLICATION SETTINGS
# ===========================
DEBUG=False
CORS_ORIGINS=http://your-test-server-ip:3000,http://your-domain.com

# ===========================
# FRONTEND CONFIGURATION
# ===========================
# Full URL to your backend API
REACT_APP_API_URL=http://your-test-server-ip:8000/api/v1

# ===========================
# N8N CONFIGURATION
# ===========================
N8N_USER=admin
N8N_PASSWORD=change-this-secure-password
N8N_WEBHOOK_URL=http://your-test-server-ip:5678/
TIMEZONE=America/New_York
